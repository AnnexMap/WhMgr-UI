<!DOCTYPE html="{{locale}}">
    {{> header}}
    <body>
        {{> navbar}}
        <br>
        <h1 align="center" id="header">{{Settings}}</h1>
        <br>
        <div class="w-75" style="float: none; margin: 0 auto;">
            <form action="/api/settings" method="post" novalidate>
                <div class="card bg-dark">
                    <div class="card-body">
                        <div class="container">
                            <div class="form-group">
                                {{Max Distance}}
                                <input type="number" class="form-control" name="max_distance" value="{{max_distance}}" placeholder="500" required>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="enabled" {{enabled}}>
                                <label class="form-check-label" for="enabled">{{Enabled}}</label>
                            </div>
                            <br>
                            <input type="hidden" id="guild_id" name="guild_id">
                            <button type="submit" class="btn btn-primary">{{Save}}</button>
                            <br>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>

<script>
    if ("{{style}}" === 'dark') {
        $('body').css('background-color', 'rgb(33, 37, 41)');
        $('body').css('color', 'rgb(255, 255, 255)');
    }
    $('#guild_id').val(guildId);
    const guilds = document.querySelectorAll('*[id^="g_' + guildId + '"]');
    if (guilds) {
        guilds.forEach(guild => guild.hidden = false);
    }
</script>